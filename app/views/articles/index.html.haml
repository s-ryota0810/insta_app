.container
  - if @articles.present?
    - @articles.each do |article|
      = link_to article_path(article) do
        .article_field
          .article_author
            = image_tag article.user.avatar_image, class: 'article_user_icon'
            .article_user_info
              .article_user_info_name
                = article.user.account
              .article_user_info_created_at
                = article.created_at
          .article_images_scope
            - if article.images.attached?
              - article.images.each do |image|
                .article_image_size
                  = image_tag image
