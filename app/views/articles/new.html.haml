.container
  = form_with(model: @article, method: 'post', local: true) do |f|
    .article
      .article_header
        .article_header_new
          .article-header-left
            = link_to :back do
              Cancel
          .article-header-center
            Status
          .article-header-right
            = f.submit 'Post', class: 'btn_article_post'
      .post_user
        .post_user_image
          = image_tag current_user.avatar_image
        .post_user_name
          = @article.user.account
      = f.text_field :content, class: 'post_field', placeholder: "What's on your mind?"
      .image_push
        .image_push_btn
          = f.label :images, '+ Album'
          .image_push_field
            = f.file_field :images, multiple: true
