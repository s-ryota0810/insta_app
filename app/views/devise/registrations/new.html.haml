= image_tag 'Rectangle.png', class: 'rectangle'
.authentication_page
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field_account
      = f.label :account, class: 'field_account_label'
      %br/
      = f.text_field :account, class: 'field_account_box'
    .field_email
      = f.label :email, class: 'field_email_label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'field_email_box'
    .field_password
      = f.label :password, class: 'field_password_label'
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'field_password_box'
      %br/
    .actions
      = f.submit "CREATE ACCOUNT", class: 'btn-sign'
