.container
  .profile_info
    .profile_info_name
      = user.account
    #profile_image
      -if user.id === current_user.id
        = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
          = image_tag user.avatar_image, class: 'profile_info_image'
          = f.file_field :avatar, id:'uploader', style: 'display:none'
          = f.submit 'upload', id:'submit', class:'hidden'
      - else
        %div
          = image_tag user.avatar_image, class: 'profile_info_image'
        - if current_user.follow?(user)
          = link_to 'Unfollow', account_follow_path(user), data: {method: 'delete'}, class: 'follow-btn'
        - else
          = link_to 'Follow', account_follows_path(user), data: {method: 'post'}, class: 'follow-btn'
  .user_info_counts
    .element_counts
      = 45
      %p Posts
    .element_counts
      = 110
      %p Followers
    .element_counts
      = 77
      %p Follwing
